MDScreenManager:
MDScreenManager:
  MainScreen

<MainScreen>:
  name:'main_screen'
  MDBoxLayout:
    orientation: 'horizontal'
    MDBottomNavigation:
      panel_color: '#486F84'
      text_color_active: 0, 0, 0, 1 
         
      MDBottomNavigationItem:
        name: 'home'
        text: 'Home'
        icon: 'home'
        MDCard:
          radius: 0 
          size_hint: 1, 1
          md_bg_color: '#588DAF'
          MDFloatLayout:
            MDLabel:
              text:'Your location:'
              font_size: '50sp'
              font_name: '/usr/share/fonts/TTF/Dongle-Regular.ttf'
              pos_hint: {'center_y':.95, 'center_x':.52}
              color: '34495E'
            MDLabel:
              text:'...'
              color: 'FFFFFF'
              font_size: '50sp'
              font_name:'/usr/share/fonts/TTF/Dongle-Bold.ttf'
              pos_hint: {'center_y':.949, 'center_x':1.1} 
            MDCard:
              size_hint: .6, .5
              md_bg_color: '#8CABFA'
              radius: 20
              pos_hint: {'center_x':.34, 'center_y':.65}
              MDBoxLayout:
                MDFloatLayout:
                  MDLabel:
                    text: 'Nearby water \nboddies:'
                    font_name:'/usr/share/fonts/TTF/Dongle-Bold.ttf'
                    font_size: '50sp'
                    color: 'FFFFFF'
                    halign: 'left'
                    pos_hint: {'center_y':.8, 'center_x':.52}
                    line_height: .5


      MDBottomNavigationItem:
        name: 'search'
        text: 'Search'
        icon: 'magnify'
        MDCard:
          radius: 0 
          size_hint: 1, 1
          md_bg_color: '#588DAF'




      MDBottomNavigationItem:
        name: 'faq'
        text: 'FAQ'
        icon: 'help-circle-outline'
        icon_size: '40sp'
        MDCard:
          radius: 0 
          size_hint: 1, 1
          md_bg_color: '#588DAF'



          

