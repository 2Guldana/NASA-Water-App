<splashScreen>: 
  name:'splashScreen'
  progress: progress
  on_enter: 
    root.ids.progress.start()

  MDBoxLayout:
    MDCard:
      md_bg_color:'#588DAF'
      size_hint: 1, 1
      radius: 0
      MDBoxLayout:
        orientation: 'vertical'
        rows:2 
        Image:
          source: 'logo.jpeg'
          size_hint: .5 ,.5
          pos_hint:{'center_x':.5}
        MDProgressBar:
          id:progress
          chasing_duration:1 
          running_duration: 1 
          orientation:'horizontal'
          value:0
          size_hint: 1,.01
          color:'#486F84'
          type:'indeterminate'
